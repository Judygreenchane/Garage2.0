@model Garage2._0.Models.Entities.ParkedVehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Parking</h1>

<h4>Park new vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label">Vehicle Type</label>
                <select asp-for="VehicleType" class="form-control" asp-items="@Html.GetEnumSelectList<VehicleType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label">Registration Number</label>
                <input asp-for="RegistrationNumber" class="form-control" placeholder="ABC123..." />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" placeholder="White..." />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" placeholder="Audi..." />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleModel" class="control-label">Vehicle Model</label>
                <input asp-for="VehicleModel" class="form-control" placeholder="A6..." />
                <span asp-validation-for="VehicleModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wheel" class="control-label">Wheels</label>
                <input asp-for="Wheel" class="form-control" min="0" />
                <span asp-validation-for="Wheel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to garage</a>
</div>
