@model Garage2._0.Models.ViewModels.ReceiptViewModel

@{
    ViewData["Title"] = "ReceiptView";
}

<h1>Checkout</h1>

<h3>Are you sure you want to unpark this vehicle?</h3>
<div>
    <h4>Receipt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedTime)
        </dt>
        <dd class="col-sm-10">
            @ParkingHelper.FormatTimeSpan(Model.ParkedTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedFee)
        </dt>
        <dd class = "col-sm-10">
            @($"{ParkingHelper.ParkingFee(Model.ArrivalTime, Model.DepartureTime)} SEK")
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-controller="ParkedVehicles" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Unpark" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Vehicles</a>
    </form>
</div>
